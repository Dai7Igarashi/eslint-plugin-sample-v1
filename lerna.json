{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com"
    },
    "version": {
      "includeMergedTags": true,
      "message": "chore(release): publish %v",
      "allowBranch": ["deploy/prd"]
    }
  }
}
